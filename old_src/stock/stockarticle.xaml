<Window x:Class="SimplePOS.StockArticle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Artikel einlagern" Height="196" Width="234" WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow" MinWidth="234" MinHeight="196">
  <Grid>
    <TextBlock Name="textBlock1" Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" Text="Artikel Nr."
               VerticalAlignment="Top"/>
    <TextBlock Name="textBlock2" Height="23" HorizontalAlignment="Left" Margin="12,65,0,0" Text="Menge"
               VerticalAlignment="Top"/>
    <TextBox KeyDown="textBox1_KeyDown" Name="textBox1" Height="23" Margin="12,33,13,0" VerticalAlignment="Top"/>
    <TextBox KeyDown="textBox2_KeyDown" Name="textBox2" Height="23" Margin="55,62,13,0" VerticalAlignment="Top"/>
    <Button Click="button1_Click" Name="button1" Content="Lagern" Margin="0,0,12,12"
            HorizontalAlignment="Right" Width="80" Height="38" VerticalAlignment="Bottom"/>
    <Button Click="button2_Click" Name="button2" Content="Beenden" Margin="0,0,125,12" Height="38"
            VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="80"/>
  </Grid>
</Window>