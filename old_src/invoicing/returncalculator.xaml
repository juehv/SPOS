<Window x:Class="SimplePOS.Invoicing.ReturnCalculator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ReturnCalculator" Height="229" Width="294" WindowStyle="ToolWindow" MinWidth="294"
        MinHeight="229">
  <Grid>
    <TextBox Name="textBox1" Height="40" Margin="100,17,12,0" VerticalAlignment="Top" FontSize="20"
             TextWrapping="Wrap" TextAlignment="Right" IsEnabled="false" IsReadOnly="false"/>
    <TextBox KeyUp="textBox2_KeyUp" Name="textBox2" Height="23" Margin="100,63,12,0" VerticalAlignment="Top"
             TextAlignment="Right"/>
    <Button Click="button1_Click" Name="button1" Content="Schließen" Margin="0,0,12,12" Height="38"
            VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="66"/>
    <Label Name="label1" Content="Gezahlt" Height="28" HorizontalAlignment="Left" Margin="12,61,0,0"
           VerticalAlignment="Top"/>
    <Label Name="label2" Content="Summe" Height="28" HorizontalAlignment="Left" Margin="12,29,0,0"
           VerticalAlignment="Top"/>
    <TextBox Name="textBox3" Margin="100,92,12,0" TextAlignment="Right" IsReadOnly="false" IsEnabled="false"
             Height="40" VerticalAlignment="Top" FontSize="20" Foreground="#FFE81B1B"/>
    <Label Name="label3" Content="Rückgeld" Height="28" HorizontalAlignment="Left" Margin="12,104,0,0"
           VerticalAlignment="Top"/>
  </Grid>
</Window>