<Window x:Class="SimplePOS.Invoicing.ReturnCalculator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ReturnCalculator" Height="229" Width="294" WindowStyle="ToolWindow" MinWidth="294" MinHeight="229">
    <Grid>
        <TextBox Height="40" Margin="100,17,12,0" Name="textBox1" VerticalAlignment="Top" FontSize="20" TextWrapping="Wrap" TextAlignment="Right" IsEnabled="False" IsReadOnly="False" />
        <TextBox Height="23" Margin="100,63,12,0" Name="textBox2" VerticalAlignment="Top" TextAlignment="Right" KeyUp="textBox2_KeyUp" />
        <Button Content="Schließen" Margin="0,0,12,12" Name="button1" Click="button1_Click" Height="38" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="66" />
        <Label Content="Gezahlt" Height="28" HorizontalAlignment="Left" Margin="12,61,0,0" Name="label1" VerticalAlignment="Top" />
        <Label Content="Summe" Height="28" HorizontalAlignment="Left" Margin="12,28,0,0" Name="label2" VerticalAlignment="Top" />
        <TextBox Margin="100,92,12,0" Name="textBox3" TextAlignment="Right" IsReadOnly="False" IsEnabled="False" Height="40" VerticalAlignment="Top" FontSize="20" Foreground="#FFE81B1B" />
        <Label Content="Rückgeld" Height="28" HorizontalAlignment="Left" Margin="12,104,0,0" Name="label3" VerticalAlignment="Top" />
    </Grid>
</Window>
