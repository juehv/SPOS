        <Menu Height="23" Name="menu1" VerticalAlignment="Top">
            <MenuItem Header="Rechnung">
                <MenuItem Header="Neu" Click="MenuItem_Click_8"></MenuItem>
                <MenuItem Header="Storno" Click="MenuItem_Click_6"></MenuItem>
