        <Button Content="Storno" Margin="0,0,100,76" Name="button3" Click="button3_Click_1" Height="38" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="80" />
        <Label Content="Artikel Nr." Height="14" Margin="0,32,128,0" Name="label1" VerticalAlignment="Top" Padding="0" HorizontalAlignment="Right" Width="53" />
        <Label Content="Summe" Height="14" Margin="0,81,141,0" Name="label2" VerticalAlignment="Top" Padding="0" HorizontalAlignment="Right" Width="40" />
        <Label Content="Datum" Height="14" Margin="0,153,145,0" Name="label3" VerticalAlignment="Top" Padding="0" HorizontalAlignment="Right" Width="36" />
        <Label Content="Simple POS Lite, entwickelt von Jens Heuschkel" Margin="0,0,15,2" RenderTransformOrigin="-0.553,1.44" HorizontalAlignment="Right" Width="253" Height="26" VerticalAlignment="Bottom" FlowDirection="RightToLeft" Padding="0,5" FontSize="10" />
